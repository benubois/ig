<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title><%= title %></title>
    <% posts.each do |post| %>
        <entry>
            <link href="<%= post.url %>" />
            <author>
                <name><%= author %></name>
            </author>
            <published><%= post.published %></published>
            <id><%= post.id %></id>
            <content type="html">
                <![CDATA[
                    <blockquote class="instagram-media" data-instgrm-captioned data-instgrm-permalink="<%= post.url %>" data-instgrm-version="8">
                        <a href="<%= post.url %>"><img src="<%= post.display_src %>"></a>
                    </blockquote>
                ]]>
            </content>
        </entry>
    <% end %>
</feed>